<div id="productReportModal" class="modal">
    <div class="modal-content">
        <div class="col">
            <div class="col-md-12">
                <span class="close-btn">&times;</span>
                <h2 style="text-align: center">Report Product</h2>
            </div>
            <div class="col-md-12">
                <form id="reportForm" asp-action="SubmitReport" asp-controller="Product" method="POST">
                    <p><strong>Product:</strong> <span id="productName"></span></p>

                    <div class="report-reason">
                        <label><strong>Reason for Report:</strong></label>
                        <select name="reportReason" id="reportReason" class="form-control" required>
                            <option value="">Select a reason...</option>
                            <option value="inappropriate">Inappropriate Content</option>
                            <option value="counterfeit">Counterfeit Product</option>
                            <option value="misleading">Misleading Information</option>
                            <option value="prohibited">Prohibited Item</option>
                            <option value="other">Other</option>
                        </select>

                        <input type="hidden" name="productId" value="" />
                    </div>

                    <textarea id="reportDescription" name="description" class="form-control" rows="5"
                              placeholder="Please provide more details about your report..." required></textarea>

                    <button type="submit" class="btn btn-primary">SUBMIT REPORT</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        // Get required elements
        const modal = document.getElementById('productReportModal');
        const reportButtons = document.querySelectorAll('.report');
        const closeBtn = modal.querySelector('.close-btn');
        const productIdInput = modal.querySelector('input[name="productId"]');
        const productNameDisplay = modal.querySelector('#productName');
        const form = document.getElementById('reportForm');

        // Open modal and update ProductId, ProductName
        reportButtons.forEach(button => {
            button.addEventListener('click', () => {
                const productId = button.getAttribute('data-product-id');
                const productName = button.getAttribute('data-product-name');

                productIdInput.value = productId;
                productNameDisplay.textContent = productName;
                modal.style.display = 'block';
            });
        });

        // Close modal with close button
        closeBtn.addEventListener('click', () => {
            modal.style.display = 'none';
        });

        // Close modal when clicking outside
        window.addEventListener('click', (event) => {
            if (event.target === modal) {
                modal.style.display = 'none';
            }
        });

        // Handle form submission
        form.addEventListener('submit', (event) => {
            event.preventDefault();

            const reason = document.getElementById('reportReason').value;
            const description = document.getElementById('reportDescription').value;

            if (!reason) {
                alert("Please select a reason for your report.");
                return;
            }

            if (!description.trim()) {
                alert("Please provide details about your report.");
                return;
            }

            // Send data via AJAX
            const data = new FormData(form);
            fetch(form.getAttribute('action'), {
                method: 'POST',
                body: data,
            })
            .then(response => response.json())
            .then(result => {
                if (result.success) {
                    console.log('Report submitted successfully:', result);
                    alert('Thank you for submitting your report. We will review it shortly.');
                    modal.style.display = 'none';
                    form.reset();
                } else {
                    alert('Report submission failed! ' + (result.message || 'Please try again.'));
                }
            })
            .catch(error => {
                console.error('Error submitting report:', error);
                alert('An error occurred. Please try again!');
            });
        });
    });
</script>

