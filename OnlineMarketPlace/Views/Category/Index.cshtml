@{
    ViewData["Title"] = "Danh mục sản phẩm";
    var categories = ViewData["CategoriesList"] as OnlineMarketPlace.Models.CategoriesList;
    var products = ViewData["Products"] as List<OnlineMarketPlace.Models.Product>;
}
<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f8f8f8;
    }

    nav {
        display: flex;
        justify-content: space-between;
        padding: 10px;
    }

    .filters, .sorting {
        padding: 10px;
        background-color: white;
        margin: 10px;
        border-radius: 5px;
    }

    .dropdown {
        position: relative;
        display: inline-block;
    }

    .dropdown-content {
        display: none;
        position: absolute;
        background-color: white;
        min-width: 160px;
        box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.2);
        padding: 10px;
        z-index: 1;
        border-radius: 5px;
    }

    .dropdown:hover .dropdown-content {
        display: block;
    }

    .dropdown-content button {
        display: block;
        width: 100%;
        text-align: left;
        background: none;
        border: none;
        padding: 8px;
        cursor: pointer;
    }

    .product-list {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
        padding: 10px;
    }

    .product {
        background-color: white;
        padding: 15px;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        text-align: center;
        width: 200px;
    }

        .product img {
            max-width: 100%;
            border-radius: 5px;
        }

    .price {
        color: red;
        font-weight: bold;
    }

    .old-price {
        text-decoration: line-through;
        color: gray;
    }
    /* new */
    .product-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 20px;
    }

    .product-card {
        border: 1px solid #ddd;
        padding: 15px;
        text-align: center;
    }

    .product-image {
        max-width: 100%;
        height: auto;
    }
</style>
<body>
    <main>
        <section class="filters">
            <h3>Filter by criteria</h3>
            <div class="dropdown">
                <button>Category ▼</button>
                <div class="dropdown-content">
                    <button>Fashion</button>
                    <button>Electronics & Technology</button>
                    <button>Toys</button>

                </div>
            </div>
            <div class="dropdown">
                <button>Price ▼</button>
                <div class="dropdown-content">
                    <button>Below 5 million</button>
                    <button>5 - 10 million</button>
                    <button>Above 10 million</button>
                </div>
            </div>
        </section>
        <section class="sorting">
            <h3>Sort by</h3>
            <button>Price High - Low</button>
            <button>Price Low - High</button>
            <button>Hot Promotions</button>
            <button>Most Viewed</button>
        </section>
            <div class="product-grid">
                @if (products != null)
                {
                    @foreach (var product in products)
                    {
                        <div class="product-card">
                            <img src="@product.Image" alt="@product.Name" class="product-image" />
                            <h3>@product.Name</h3>
                            <p>Price: @product.Price VND</p>
                            <p>@product.Description</p>
                            <a href="/Product/Details/@product.Id" class="btn btn-primary">View Detail</a>
                        </div>
                    }
                }
            </div>
    </main>
</body>
